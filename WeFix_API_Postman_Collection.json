            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tvBrand\": \"Samsung\",\n  \"tvModel\": \"UA55AU7700\",\n  \"issueType\": \"display-issue\",\n  \"issueDescription\": \"Screen has vertical lines and flickering\",\n  \"address\": \"No. 123, Main Street, Colombo 03, Sri Lanka\",\n  \"phone\": \"+94771234567\",\n  \"pickupOption\": \"pickup\",\n  \"customerName\": \"John Doe\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/bookings",
              "host": ["{{base_url}}"],
              "path": ["bookings"]
            }
          }
        },
        {
          "name": "Get User Bookings",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {
              "raw": "{{base_url}}/bookings/user",
